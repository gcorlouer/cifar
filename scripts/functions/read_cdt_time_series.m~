function gc_input = read_cdt_time_series(args)
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
arguments
   args.datadir = fullfile('~', 'projects', 'cifar', 'results'); % Result path
   args.subject = 'DiAs'; % Subject to read
   args.suffix = '_condition_visual_ts.mat'; % suffix filename
end

datadir = args.datadir; subject = args.subject; suffix = args.suffix;

fname = [subject '_condition_visual_ts.mat'];
fpath = fullfile(datadir, fname);
% Meta data about time series
gc_input = load(fpath);
end


